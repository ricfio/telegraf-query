    "version": "0.2.0",
    "configurations": [
        {
            "name": "Exec Plugin",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": [
                "--config", "${workspaceFolder}/cmd/plugin.conf",
            ]
        },
        {
            "name": "Test Plugin",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/plugins/inputs/query/query.go",
            "args": [],
            "showLog": true
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        }
    ]
}